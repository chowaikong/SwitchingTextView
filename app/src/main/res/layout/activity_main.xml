<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:st="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.knox.example.MainActivity"
    >

  <me.knox.switchingtextview.SwitchingTextView
      android:id="@+id/st1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="30sp"
      android:textColor="@android:color/black"
      st:switchDuration = "1000"
      st:idleDuration = "1500"
      st:switchOrientation="down"
      android:padding="10dp"
      tools:text="android"
      />
  <me.knox.switchingtextview.SwitchingTextView
      android:id="@+id/st2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="30sp"
      android:textColor="@android:color/black"
      st:switchDuration = "1000"
      st:idleDuration = "1500"
      st:switchOrientation="up"
      android:padding="10dp"
      tools:text="android"
      />
</LinearLayout>
